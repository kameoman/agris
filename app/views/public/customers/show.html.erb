
 <form class="border rounded bg-white form-time-table">
  <h1 class="d-flex justify-content-center">
  -<%= @customer.name %>様
    月別リスト-</h1>
<%= link_to "", customer_path(current_customer,month:@month.prev_month), class: "fas fa-angle-double-left fa-2x nav-link" %>
<strong>
<%= @month.strftime('%Y/%m') %>
</strong>
<%= link_to "", customer_path(current_customer,month:@month.next_month), class: "fas fa-angle-double-right fa-2x nav-link" %>
<div class="container">
  <table class="table table-bordered align-center" id="fav-table">
    <thead>
      <tr class="bg-light text-center">
        <th scope="col "></th>
        <th scope="col ">名前</th>
        <th scope="col">品目</th>
        <th scope="col">出荷日時</th>
        <th scope="col">出荷先</th>
        <th scope="col">数量</th>
        <th scope="col">規格</th>
        <th scope="col" colspan="3">出荷データ</th>
      </tr>
    </thead>

  <div class="table-td">
      <tbody>
        <%= form_with(model: @item, local: true) do |form| %>
        <% @items.each do |item| %>
          <tr class="bg-light text-center">
            <td><input type="checkbox" onclick="keisan()"></td>
            <td><%= @customer.name %></td>
            <td><%= item.name %></td>
            <td><%= item.date.strftime('%Y/%m/%d')%></td>
            <td><%= item.send_method %></td>
            <td><%= item.count %></td>
            <td><%= item.standard %></td>
            <td>
              <%= link_to "詳細", item_path(item),remote: true, class: "fas fa-poll-h fa-2x nav-link" %>
              </td>
            <td><%= link_to '編集', edit_item_path(item), class: "fas fa-pencil-alt fa-2x nav-link" %></td>
            <td><%= link_to '削除', item, method: :delete, data: { confirm: '削除してもいいですか?' }, class: "nav-link" %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  <div id="mask" class="hidden" ></div>

  <section id="modal" class="hidden" tabindex="-1" role="dialog">
    <%= render partial: 'items/modal', locals: {item: @item }%>
  </section>


<div>
  <canvas id="stage"></canvas>
</div>

   <% if flash.any? %>
      <script type="text/javascript">
        <% flash.each do |key, value| %>
          <% key = "success" if key == "notice" %>
          toastr['<%= key %>']('<%= value %>');
        <% end %>
      </script>
    <% end %>



<script language="JavaScript">
plice=new Array();
plice[0]=100;
plice[1]=200;
plice[2]=300;
function keisan(){
goukei=0;
for(i=0;i<=2;i++){
if(document.vagesum.elements[i].checked==true){
goukei=goukei+plice[i];
}
}
document.vagesum.total.value=goukei;
}
</script>


<form name="vagesum">
<table cellpadding="1" cellspacing="0" border="0">
<tr>
<td align="left" nowrap><font color="#999999"></font>ホウレンソウ(100円)
<td align="left"><input type="checkbox" onclick="keisan()"> 束</td>
</tr>
<tr>
<td align="left"><font color="#999999"><font>トマト(200円)</td>
<td><input type="checkbox" onclick="keisan()"> 袋</td>
</tr>
<tr>
<td align="left"><font color="#999999"></font>キャベツ(300円)</td>
<td><input type="checkbox" onclick="keisan()"> 個</td>
</tr>
<tr>
<td align="left"><font color="red"></font><b><font color="#ff0000">合計金額</font></b></td>
<td align="left"><input type="text" name="total" value="0"> 円</td>
</tr>
</table>
</form>