<div class="customer-login">
  
<%= render "customers/shared/error_messages", resource: resource %>
  <h2 class="login-title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-mail", placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "input-mail", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="t-deco">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする", class: "button-2" %>
    </div>
  <% end %>
  <div class="wrapper">アカウントをお持ちではありませんか？
    <%= render "customers/shared/links" %>
  </div>



</div>