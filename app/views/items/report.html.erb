

<p id="notice"><%= notice %></p>
 <form class="border rounded bg-white form-time-table">
  <h1 class="d-flex justify-content-center">月別リスト</h1>
<%= link_to "前の月へリンク",report_path(month:@month.prev_month) %>
<%= link_to "次の月へリンク",report_path(month:@month.next_month) %>

<table class="table table-bordered">
  <thead>
    <tr class="bg-light">
      <th scope="col">品目</th>
      <th scope="col">出荷日時</th>
      <th scope="col">出荷先</th>
      <th scope="col">コメント</th>
      <th scope="col">数量</th>
      <th scope="col">規格</th>
      <th scope="col">画像</th>
      <th scope="col" colspan="3">出荷データ</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.date%></td>
        <td><%= item.send_method %></td>
        <td><%= item.comment %></td>
        <td><%= item.count %></td>
        <td><%= item.standard %></td>
        <td><%= item.image_id %></td>
        <td><%= link_to '詳細', item %></td>
        <td><%= link_to '編集', edit_item_path(item) %></td>
        <td><%= link_to '削除', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>

