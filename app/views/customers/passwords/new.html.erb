<div class="password_path">
  
  <h2 class="login-title">パスワードを忘れた場合</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-mail", placeholder: "メールアドレス"%>
  </div>

  <div class="actions">
    <%= f.submit "パスワード再設定用メールを送信" %>
  </div>
<% end %>

</div>