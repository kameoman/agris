 <form class="border rounded bg-white form-time-table">
  <h1 class="d-flex justify-content-center">
    <%= @customers.name %>様
    月別リスト</h1>
<%= link_to "",report_path(month:@month.prev_month), class: "fas fa-angle-double-left fa-2x" %>
<strong>
<%= @month.strftime('%Y/%m') %>
</strong>
<%= link_to "",report_path(month:@month.next_month), class: "fas fa-angle-double-right fa-2x" %>

<table class="table table-bordered">
  <thead>
    <tr class="bg-light">
      <th scope="col">名前</th>
      <th scope="col">品目</th>
      <th scope="col">出荷日時</th>
      <th scope="col">出荷先</th>
      <th scope="col">コメント</th>
      <th scope="col">数量</th>
      <th scope="col">規格</th>
      <th scope="col">画像</th>
      <th scope="col">出荷データ</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= @customers.name %></td>
        <td><%= item.name %></td>
        <td><%= item.date.strftime('%Y/%m/%d')%></td>
        <td><%= item.send_method %></td>
        <td><%= item.comment %></td>
        <td><%= item.count %></td>
        <td><%= item.standard %></td>
        <td><%= attachment_image_tag(item, :image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></td>
        <td><%= link_to '詳細', item %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>


