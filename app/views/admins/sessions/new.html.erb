<div class="admin-login">
  
<h2 class="login-title">管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-mail", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "input-mail", placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="t-deco">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class: "button-2" %>
  </div>
<% end %>
<div class="wrapper">
<%= render "admins/shared/links" %>
</div>

</div>