<h2>新規登録の画面です</h2>

<div class="form-sign-in">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    
  <div class="form-group">
    
    <div class="form">
      <%= f.text_field :name,autofocus: true, placeholder:"名前" %>
    </div>
  
    <div class="form">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>
  
    <div class="form">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"新規パスワード" %>
    </div>
  
    <div class="form">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"新規パスワードの確認（再入力）" %>
    </div>
  </div>
  
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  
  <%= render "customers/shared/links" %>
</div>
